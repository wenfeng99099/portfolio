<% include header.ejs %>


	<h2>
		<div class = "container">
			<div class = "jumbotron">
				<form method="POST" action="/register">
					<div class="form-group">
						<label for="registerName">Name</label>
						<input type="text" class="form-control" name="regName" placeholder="Enter <FirstName> <LastName>">
					</div>
					<div class="form-group">
						<label for="registerUsername">UserName</label>
						<input type="text" class="form-control" name="regUserName" placeholder="Enter UserName">
					</div>
					<div class="form-group">
						<label for="registerPassword">Password</label>
						<input type="password" class="form-control" name="regPassword" placeholder="Enter Password">
					</div>
					<div class="form-group">
						<label for="registerPassword2">Confirm Password</label>
						<input type="password" class="form-control" name="regPassword2" placeholder="Repeat Password">
					</div>
					<div class="form-group">
						<label for="registerEmail">Email</label>
						<input type="email" class="form-control" name="regEmail" placeholder="Enter Email">
					</div>
					<button type="submit" class="btn btn-primary">Register!</button>
				</form>
			</div>
		</div>
	</h2>
<% include footer.ejs %>